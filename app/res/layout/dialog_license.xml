<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/text_license_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License of OpenTraining"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/released_button_background" />

        <TextView
            android:id="@+id/text_view_actionbarsherlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_text_action_bar_sherlock"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_view_license_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License of ActionBarSherlock"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/released_button_background" />

        <TextView
            android:id="@+id/text_view_open_training_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disclaimer"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_view_license_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License of Swipe To Dismiss"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/released_button_background" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_text_swipe_to_dismiss"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/text_view_license_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Image licenses"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/released_button_background" />

        <TextView
            android:id="@+id/text_view_license_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_text_images"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</ScrollView>