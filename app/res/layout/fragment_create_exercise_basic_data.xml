<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_fex_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
            <RelativeLayout
            android:id="@+id/wrapper_muscle_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/imageview_exercise_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/dummy_image" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/wrapper_muscle_selector"
        android:paddingLeft="14dp"
        android:paddingRight="14dp" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:text="Exercise name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/released_button_background" />

        <EditText
            android:id="@+id/edittext_exercise_name_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_below="@+id/TextView01"
            android:ems="10"
            android:hint="English name" />

        <EditText
            android:id="@+id/edittext_exercise_name_german"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView01"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="German name" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/TextView01"
            android:layout_alignParentLeft="true"
            android:background="@color/text_color_table"
            android:orientation="vertical" >

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>