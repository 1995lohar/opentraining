<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.skubware.training_app"
    android:versionCode="1"
    android:versionName="0.0.1" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="11" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <supports-screens android:resizeable="false"
                  android:smallScreens="false"
                  android:normalScreens="false"
                  android:largeScreens="false"
                  android:xlargeScreens="true"
                  android:anyDensity="false"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:logo="@drawable/ic_launcher">
        <activity
            android:name="de.skubware.opentraining.activity.HomeActivity"
            android:label="@string/app_name" android:stateNotNeeded="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.skubware.opentraining.activity.SelectExercisesActivity"></activity>
        <activity android:name="de.skubware.opentraining.activity.ManageDatabaseActivity" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="de.skubware.opentraining.activity.ShowTPActivity"></activity>
        <activity android:windowSoftInputMode="stateHidden" android:name="de.skubware.opentraining.activity.EditWorkoutActivity"></activity>
    </application>

</manifest>